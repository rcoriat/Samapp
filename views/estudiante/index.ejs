<div class="container">
    <h2>Estudiantes registrados</h2>
    <a class="button" href="/estudiante/new"> Agregar Estudiante </a>
    <a class="button" href="/"> Regresar </a>

	<table class="table table-hover">
        <th>Cedula</th>
		<th>Nombre</th>
		<th>Apellido</th>
		<th colspan="2" class="text-center">Acciones</th>
		<%_.each(estudiante,function(estudiante){ %>
		<tr>
			<td><%=estudiante.cedula%></td>
            <td><%=estudiante.nombre%></td>
            <td><%=estudiante.apellido%></td>
	
			<td>
				<a href="/estudiante/show/<%=estudiante.id%>" class="btn btn-success btn-sm "> Ver Detalles</a>
			</td>
			<td>
				<form action="/estudiante/destroy/<%=estudiante.id%>" method="POST" accept-charset="utf-8">
					<input type="hidden" name="method" value="delete"/>
					<input type="submit" class="btn btn-sm btn-danger" value="Eliminar"/>
					<input type="hidden" name="_csrf" value="<%=_csrf%>"/>

				</form>
					
			
			</td>
		</tr>

	<%})%>

	</table>
</div>